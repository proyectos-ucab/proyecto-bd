-- CRUD
CREATE TABLE IF NOT EXISTS evaluacion_usuario (
cedula_usuario INT NOT NULL,
id_tema INT NOT NULL,
id_evaluacion INT NOT NULL,
nrc_asignatura INT NOT NULL,
nota INT NOT NULL,

-- CREAR
INSERT INTO evaluacion_usuario VALUES(cedula_usuario,id_tema,id_evaluacion,nrc_asignatura,nota)

-- Seleccionar segun los datos de la pantalla de figma
SELECT (tema.numero,evaluacion.descripcion, usuario.cedula, usuario.nombre, usuario.correo, evaluacion_usuario.nota)
  FROM evaluacion_usuario ,  usuario , tema, tema_evaluacion, evaluacion
    WHERE (evaluacion_usuario.nrc_asignatura = "id_asignatura_dado") AND
          (evaluacion_usuario.nrc_asignatura = asignatura_usuario.nrc_asignatura) AND
          
          (evaluacion_usuario.cedula_usuario = "cedula_usuario_dado")AND
          (evaluacion_usuario.cedula_usuario = usuario.cedula) AND
          
          (evaluacion_usuario.id_evaluacion= "id_evaluacion dado") AND
          (evaluacion_usuario.id_evaluacion = tema_evaluacion.id_evaluacion) AND
          (evaluacion_usuario.id_evaluacion = evaluacion.id)AND
          
          (evalucion_usuario.id_tema = id_tema_dado") AND
          (evalucion_usuario.id_tema = tema_evaluacion.id_tema) AND
          );
          
          
  
 --Actualizar           
 UPDATE evaluacion_usuario SET nota =   
   WHERE (evaluacion_usuario.nrc_asignatura = "id_asignatura_dado") AND
          (evaluacion_usuario.cedula_usuario = "cedula_usuario_dado")AND
          (evaluacion_usuario.id_evaluacion= "id_evaluacion dado") AND
          (evalucion_usuario.id_tema = id_tema_dado") AND
          );
     
 --eliminar           
 Detele evaluacion_usuario  
   WHERE (evaluacion_usuario.nrc_asignatura = "id_asignatura_dado") AND
          (evaluacion_usuario.cedula_usuario = "cedula_usuario_dado")AND
          (evaluacion_usuario.id_evaluacion= "id_evaluacion dado") AND
          (evalucion_usuario.id_tema = id_tema_dado") AND
          );
     
                   
          
